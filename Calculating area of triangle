// Building simple formulas
// Calculating area of triangle
#include <iostream>
using namespace std;
int main()
{
    float base;
    float height;
    cout<<"Enter the base value of triangle: ";
    cin>>base;
    cout<<"Enter the height value of triangle: ";
    cin>>height;
    float area=base*height/2;
    cout<<"The area of triangle with base "<<base
        <<" and height "<<height
        <<" is: "<<area
        <<endl;
    return 0;
}    
