//Taking input, sum formula
//number types
#include <iostream>
using namespace std;
int main()
{
    int num1;
    float num2;
    double num3;
    cout<<"Please enter first number in intrgers: ";
    cin>>num1;
    cout<<"Enter second number in float: ";
    cin>>num2;
    cout<<"Enter third number (large float value): ";
    cin>>num3;
    double sum=num1+num2+num3;
    cout<<"There sum is "<<sum<<endl;
    return 0;
}
